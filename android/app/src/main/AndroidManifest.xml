<manifest xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- ┌──────────────────────────────────────────────────────────────┐ -->
    <!-- │ PERMISOS DE LA APLICACIÓN                                    │ -->
    <!-- │ Estos permisos son esenciales para las funcionalidades       │ -->
    <!-- │ de seguridad comunitaria: GPS, cámara, micrófono e internet. │ -->
    <!-- └──────────────────────────────────────────────────────────────┘ -->

    <!-- Internet: necesario para conectarse a Firebase, API de Policía y notificaciones -->
    <uses-permission android:name="android.permission.INTERNET" />

    <!-- Acceso a ubicación precisa (GPS) para alertas de pánico y reportes georreferenciados -->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <!-- Acceso a ubicación aproximada (red/Wi-Fi) como respaldo si GPS no está disponible -->
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

    <!-- Cámara: para adjuntar fotos en reportes de incidentes -->
    <uses-permission android:name="android.permission.CAMERA" />

    <!-- Micrófono: para grabar audio corto durante una alerta de pánico -->
    <uses-permission android:name="android.permission.RECORD_AUDIO" />

    <!-- Almacenamiento (solo en Android < 10): para guardar temporalmente fotos/videos -->
    <!-- En Android 10+ (API 29+), se usa Storage Access Framework, no se requiere permiso -->
    <uses-permission
        android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        android:maxSdkVersion="28" />

    <!-- Notificaciones push: necesario para recibir alertas de vecinos y sistema -->
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />


    <!-- ┌──────────────────────────────────────────────────────────────┐ -->
    <!-- │ CONFIGURACIÓN DE LA APLICACIÓN                               │ -->
    <!-- └──────────────────────────────────────────────────────────────┘ -->
    <application
        android:label="San José Seguro"
        android:name="${applicationName}"
        android:icon="@mipmap/ic_launcher"
        android:usesCleartextTraffic="false"> <!-- Seguridad: bloquea tráfico HTTP no cifrado -->

        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:launchMode="singleTop"
            android:taskAffinity=""
            android:theme="@style/LaunchTheme"
            android:configChanges="orientation|keyboardHidden|keyboard|screenSize|smallestScreenSize|locale|layoutDirection|fontScale|screenLayout|density|uiMode"
            android:hardwareAccelerated="true"
            android:windowSoftInputMode="adjustResize">

            <!-- Tema visible mientras se carga la UI de Flutter -->
            <meta-data
                android:name="io.flutter.embedding.android.NormalTheme"
                android:resource="@style/NormalTheme" />

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Requerido por Flutter para registrar plugins -->
        <meta-data
            android:name="flutterEmbedding"
            android:value="2" />
    </application>


    <!-- ┌──────────────────────────────────────────────────────────────┐ -->
    <!-- │ VISIBILIDAD DE PAQUETES (Android 11+)                        │ -->
    <!-- │ Permite a la app interactuar con otras apps (ej. compartir)  │ -->
    <!-- └──────────────────────────────────────────────────────────────┘ -->
    <queries>
        <intent>
            <action android:name="android.intent.action.PROCESS_TEXT" />
            <data android:mimeType="text/plain" />
        </intent>
    </queries>

</manifest>